<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".view.fragments.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clGita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cv">


        <LinearLayout
            android:id="@+id/llBhagavadGita"
            android:layout_width="wrap_content"
            android:layout_height="65.00dp"
            android:gravity="center"
            android:padding="13.00dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="21.00dp"
                android:layout_height="21.00dp"
                android:src="@drawable/om" />

            <TextView
                android:id="@+id/tvChapterNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:text="Shree Bhagavad Gita"
                android:textColor="@color/gold"
                android:textSize="19.00sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="21.00dp"
                android:layout_height="21.00dp"
                android:src="@drawable/om" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llSaveFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"

            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/ivSave"
                android:layout_width="39.00dp"
                android:layout_height="30.00dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/save"
                android:visibility="visible" />
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginHorizontal="@dimen/_3sdp"
        android:elevation="2.60dp"
        app:cardCornerRadius="13.00dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clGita"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


<!--            <TextView-->
<!--                android:id="@+id/tvShowingVerses"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginHorizontal="2.60dp"-->
<!--                android:padding="3.90dp"-->
<!--                android:text="Verse Of the Day "-->
<!--                android:textColor="@color/gold"-->
<!--                android:textSize="18.30sp"-->
<!--                android:textStyle="bold" />-->


            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <TextView
                    android:id="@+id/tvVerseOfTheDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2.60dp"
                    android:padding="3.90dp"
                    android:textColor="@color/gold"
                    android:textSize="15.70sp"
                    android:textStyle="bold"
                    android:text="कृष्णाय वासुदेवाय हरये परमात्मने ।\nप्रणतः क्लेशनाशाय गोविंदाय नमो नमः ।।\n\nयह श्लोक भगवान श्रीकृष्ण की महिमा का गान करता है और उनकी दिव्यता को व्यक्त करता है। श्रीकृष्ण केवल वासुदेव के पुत्र ही नहीं, बल्कि स्वयं परमात्मा, सृष्टि के नियंता, और भक्तों के सभी दुखों का नाश करने वाले हैं।\n\nकृष्णाय वासुदेवाय – इस पंक्ति में भगवान कृष्ण को संबोधित किया गया है, जो वासुदेव और देवकी के पुत्र हैं। उनका जन्म मथुरा में हुआ और वे गोकुल व वृंदावन में पले-बढ़े।\n\nहरये परमात्मने – हरि शब्द का अर्थ है 'जो सारे कष्टों को हर (नष्ट) कर देते हैं'। वे केवल एक व्यक्ति नहीं बल्कि स्वयं परमात्मा (Supreme Soul) हैं, जो सबके हृदय में निवास करते हैं।\n\nप्रणतः क्लेशनाशाय – जो भक्त उनकी शरण में आते हैं, वे उनके सारे कष्ट, दुख, पीड़ा और संकटों को समाप्त कर देते हैं। भगवान श्रीकृष्ण का स्वरूप ही दयालुता और करुणा से परिपूर्ण है।\n\nगोविंदाय नमो नमः – भगवान श्रीकृष्ण को  गोविंद कहा जाता है, जिसका अर्थ है गायों और समस्त प्राणियों के रक्षक। उन्होंने गोकुल में ग्वालों और गायों की रक्षा की, गोवर्धन पर्वत उठाकर अपने भक्तों की रक्षा की। इसी कारण उन्हें गोविंद कहा जाता है। इस श्लोक के माध्यम से हम उन्हें बार-बार नमन करते हैं।"
                    />
            </ScrollView>


        </LinearLayout>

        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/background"

            />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvChapters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Chapters"
        android:textColor="@color/black"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChapters"
        >



        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6.50dp"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <include layout="@layout/shimmer_iv_chapters"/>

                <include layout="@layout/shimmer_iv_chapters"/>

                <include layout="@layout/shimmer_iv_chapters"/>

                <include layout="@layout/shimmer_iv_chapters"/>

                <include layout="@layout/shimmer_iv_chapters"/>

                <include layout="@layout/shimmer_iv_chapters"/>

                <include layout="@layout/shimmer_iv_chapters"/>



            </LinearLayout>



        </com.facebook.shimmer.ShimmerFrameLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6.50dp"
            android:visibility="visible"
            android:id="@+id/rvChapters"
            tools:listitem="@layout/item_view_chapters"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

            />



    </LinearLayout>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="1500dp"
        android:layout_height="150dp"

        android:visibility="gone"
        android:src="@drawable/no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59000003" />

    <TextView
        android:id="@+id/tvShowingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="2.60dp"
        android:gravity="center"
        android:text="No Internet connection! \n Check for saved chapters in setting"
        android:textColor="@color/gold"
        android:textSize="15.30sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.13" />


</androidx.constraintlayout.widget.ConstraintLayout>