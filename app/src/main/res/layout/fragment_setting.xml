<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragments.SettingFragment">


    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/ivOm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29000002">


        <LinearLayout
            android:id="@+id/llBhagavadGita"
            android:layout_width="wrap_content"
            android:layout_height="65.00dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="13.00dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="21.00dp"
                android:layout_height="21.00dp"
                android:src="@drawable/om" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="3dp"
                android:text="Shree Bhagavad Gita"
                android:textColor="@color/gold"
                android:textSize="26.00sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="21.00dp"
                android:layout_height="21.00dp"
                android:src="@drawable/om" />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26.00dp"
            android:layout_marginTop="65.50dp"
            android:clickable="true"
            android:elevation="3.60dp"
            android:focusable="true"
            app:cardCornerRadius="7.50dp"
            app:cardUseCompatPadding="true">


            <LinearLayout
                android:id="@+id/savedVerses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_iv_chapters"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="6.50dp">

                <LinearLayout
                    android:id="@+id/llSavedChapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="35.00dp"
                        android:layout_height="35.00dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/save_chapter"

                        />

                    <TextView
                        android:id="@+id/tvSavedChapters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="2.60dp"
                        android:layout_weight="0.8"
                        android:text="Saved Chapters"
                        android:textColor="@color/gold"
                        android:textSize="19.20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="35.00dp"
                        android:layout_height="35.00dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/leftarro"
                        app:tint="@color/gold" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llSavedVerses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35.00dp"
                        android:layout_height="35.00dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/save_verses"

                        />

                    <TextView
                        android:id="@+id/tvSavedVerses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="2.60dp"
                        android:layout_weight="0.8"
                        android:text="Saved Verses"
                        android:textColor="@color/gold"
                        android:textSize="19.20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="35.00dp"
                        android:layout_height="35.00dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/leftarro"
                        app:tint="@color/gold" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.05"
        android:scaleType="centerCrop"
        android:src="@drawable/cd11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivOm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.4"
        android:src="@drawable/cd10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llTop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed by Abhishek Suman\n"
        android:textColor="@color/gold"
        android:textSize="16.00sp"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivOm" />
    
    
    

   

</androidx.constraintlayout.widget.ConstraintLayout>