<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.VerseDetalisFragment"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">






                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llBhagavadGita"
                        android:layout_width="wrap_content"
                        android:layout_height="65.10dp"
                        android:gravity="center"
                        android:padding="13.00dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="19.50dp"
                            android:layout_height="19.50dp"
                            android:src="@drawable/swastika" />

                        <TextView
                            android:id="@+id/tvHeading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="2.60dp"
                            android:text="Shree Bhagavad Gita"
                            android:textColor="@color/gold"
                            android:textSize="24.10sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="19.50dp"
                            android:layout_height="19.50dp"
                            android:src="@drawable/swastika" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSaveFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/llBhagavadGita"
                        app:layout_constraintTop_toTopOf="parent">


                        <ImageView
                            android:id="@+id/ivFavoriteVerse"
                            android:layout_width="39.00dp"
                            android:layout_height="39.00dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/heart_com"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/ivFavoriteVerseFilled"
                            android:layout_width="39.00dp"
                            android:layout_height="39.00dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/heart_com_fill"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/gold"
                    android:visibility="visible"
                    app:indicatorColor="@color/gold"
                    app:layout_anchor="@id/llBhagavadGita"
                    app:layout_anchorGravity="bottom"
                    app:trackColor="#fffdd0" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clInternetConnection"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.1"
                        android:src="@drawable/no2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="1500dp"
                        android:layout_height="150dp"

                        android:layout_marginBottom="82dp"
                        android:src="@drawable/no"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvShowingMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginBottom="100dp"
                        android:gravity="center"
                        android:text="No internet connection ! \n Check for saved verses in settings "
                        android:textColor="@color/gold"
                        android:textSize="21.30sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView4" />




                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tvVerseNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.00dp"
                    android:gravity="center"
                    android:text="||1.6||"
                    android:textColor="@color/black"
                    android:textSize="22.10dp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvVersesText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6.50dp"
                    android:layout_marginTop="9.10dp"
                    android:gravity="center"
                    android:lineSpacingExtra="15dp"
                    android:text="सञ्जय उवाच दृष्ट्वा तु पाण्डवानीकं व्यूढं दुर्योधनस्तदा। आचार्यमुपसङ्गम्य राजा वचनमब्रवीत्।।1.2।।"
                    android:textColor="@color/gold"
                    android:textSize="20.50sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvTransliterationIfEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6.50dp"
                    android:layout_marginTop="13.00dp"
                    android:gravity="center"
                    android:lineSpacingExtra="7dp"
                    android:text="dhṛitarāśhtra uvācha dharma-kṣhetre kuru-kṣhetre samavetā yuyutsavaḥ māmakāḥ pāṇḍavāśhchaiva kimakurvata sañjaya"
                    android:textColor="@color/black"
                    android:textSize="14.30sp"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tvWordIfEnglish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6.50dp"
                    android:layout_marginTop="18.00dp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:text="dhṛitarāśhtraḥ uvācha—Dhritarashtra said; dharma-kṣhetre—the land of dharma; kuru-kṣhetre—at Kurukshetra; samavetāḥ—having gathered; yuyutsavaḥ—desiring to fight; māmakāḥ—my sons; pāṇḍavāḥ—the sons of Pandu; cha—and; eva—certainly; kim—what; akurvata—did they do; sañjaya—Sanjay"
                    android:textColor="@color/black"
                    android:textSize="14.30sp"
                    android:textStyle="italic"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="150.00dp"
                    android:src="@drawable/l2"
                    android:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:alpha="0.1"
                android:src="@drawable/cd1"
                app:layout_constraintBottom_toTopOf="@id/iv2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.1"
                android:src="@drawable/cd10"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/clBottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"/>








            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llTop">

                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"



                    android:alpha="0.1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cd11"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/llBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >


                    <TextView
                        android:id="@+id/tvTranslation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6.50dp"
                        android:layout_marginTop="13.00dp"
                        android:gravity="center"
                        android:text="Translations"
                        android:textColor="@color/black"
                        android:textSize="19.50sp"
                        android:textStyle="bold"
                        android:visibility="visible" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clTranslation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="13.00dp"
                        android:layout_marginTop="6.50dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_verse_card"
                            android:orientation="vertical"
                            android:padding="6.50dp"


                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="6.50dp">

                                <TextView
                                    android:id="@+id/tvAuthor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Author"
                                    android:textColor="#575656"
                                    android:textSize="13.00sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvArrow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" : "
                                    android:textColor="#000000"
                                    android:textSize="13.00sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvAuthorName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Swami Sivananda "
                                    android:textColor="#000000"
                                    android:textSize="13.00sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="6.50dp"
                                android:paddingBottom="26.00dp"
                                android:text="The strong Yudhamanyu and the brave Uttamaujas, the son of Subhadra (Abhimanyu, the son of Subhadra and Arjuna), and the sons of Draupadi, all of them great charioteers (great heroes)."
                                android:textColor="#000000"
                                android:textSize="16.90sp" />
                        </LinearLayout>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabTranslationRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginEnd="9.80dp"
                            android:backgroundTint="@color/gold"
                            android:src="@drawable/baseline_keyboard_arrow_right_24"
                            android:tint="@color/white"
                            app:layout_constraintBottom_toBottomOf="@id/linearLayout"
                            app:layout_constraintEnd_toEndOf="@id/linearLayout"
                            app:layout_constraintTop_toBottomOf="@id/linearLayout" />


                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabTranslationLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"

                            android:layout_marginStart="9.80dp"
                            android:backgroundTint="@color/gold"
                            android:src="@drawable/baseline_keyboard_arrow_left_24"

                            android:tint="@color/white"
                            app:layout_constraintBottom_toBottomOf="@id/linearLayout"
                            app:layout_constraintStart_toStartOf="@id/linearLayout"
                            app:layout_constraintTop_toBottomOf="@id/linearLayout" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <TextView
                        android:id="@+id/tvCommentary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="6.50dp"
                        android:layout_marginTop="13.00dp"
                        android:gravity="center"
                        android:text="Commentary"
                        android:textColor="@color/black"
                        android:textSize="19.50sp"
                        android:textStyle="bold"
                        android:visibility="visible" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clCommentary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="13.00dp"
                        android:layout_marginTop="6.50dp"
                        android:layout_marginBottom="13.00dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:id="@+id/llCommentary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_verse_card"
                            android:orientation="vertical"
                            android:padding="6.50dp"


                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="6.50dp">

                                <TextView
                                    android:id="@+id/tvAuthorCommentary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Author"
                                    android:textColor="#575656"
                                    android:textSize="13.00sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvArrowCommentary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" : "
                                    android:textColor="#000000"
                                    android:textSize="13.00sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvAuthorNameCommentary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Swami Sivananda "
                                    android:textColor="#000000"
                                    android:textSize="13.00sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvTextCommentary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="3"
                                android:paddingHorizontal="6.50dp"

                                android:text="The strong Yudhamanyu and the brave Uttamaujas, the son of Subhadra (Abhimanyu, the son of Subhadra and Arjuna), and the sons of Draupadi, all of them great charioteers (great heroes)."
                                android:textColor="#000000"
                                android:textSize="16.90sp" />

                            <TextView
                                android:id="@+id/tvSeeMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6.50dp"
                                android:paddingBottom="26.00dp"
                                android:text="Read More ....."
                                android:textColor="#0051f4"
                                android:textSize="14.30sp" />
                        </LinearLayout>

                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabCommentaryRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginEnd="9.80dp"
                            android:backgroundTint="@color/gold"
                            android:src="@drawable/baseline_keyboard_arrow_right_24"
                            android:tint="@color/white"
                            app:layout_constraintBottom_toBottomOf="@id/llCommentary"
                            app:layout_constraintEnd_toEndOf="@id/llCommentary"
                            app:layout_constraintTop_toBottomOf="@id/llCommentary" />


                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/fabCommentaryLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"

                            android:layout_marginStart="9.80dp"
                            android:backgroundTint="@color/gold"
                            android:src="@drawable/baseline_keyboard_arrow_left_24"

                            android:tint="@color/white"
                            app:layout_constraintBottom_toBottomOf="@id/llCommentary"
                            app:layout_constraintStart_toStartOf="@id/llCommentary"
                            app:layout_constraintTop_toBottomOf="@id/llCommentary" />


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>